                <Font size="20.0" />
            </font></CheckBox>
        <CheckBox fx:id="paralysisCheckBox" layoutX="69.0" layoutY="320.0" onAction="#updateSimulation" text="Paralysis" textFill="#ff7777">
            <font>
                <Font size="20.0" />
            </font></CheckBox>
        <CheckBox fx:id="comaCheckBox" layoutX="68.0" layoutY="361.0" onAction="#updateSimulation" text="Ð¡oma" textFill="#ff7777">
